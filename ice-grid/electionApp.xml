<icegrid>
    <application name="ElectionSystemApp">
        <node name="Node1">
            <!-- Servidor Principal - Réplica 1 -->
            <server id="ServerServiceInstance1"
                    exe="java"
                    activation="on-demand" 
                    application-distrib="false"> 
                <option>-Xms6144m</option>
                <option>-Xmx6144m</option>
                <option>-cp</option>
                <option>..\Sistema-de-Votaciones\server\build\libs\server.jar</option>
                <option>ServerMain</option>
                <option>--Ice.Config=..\Sistema-de-Votaciones\server\src\main\resources\config.server1.cfg</option>
                <property name="Ice.Config" value="..\Sistema-de-Votaciones\server\src\main\resources\config.server1.cfg"/>
                <adapter name="ServerAdapter" id="ServerAdapter1ID" replica-group="ServerServiceReplicas">
                    <object identity="ServerService1" type="::ElectionSystem::ServerService"/>
                </adapter>
            </server>

            <!-- Servidor Principal - Réplica 2 -->
            <server id="ServerServiceInstance2"
                    exe="java"
                    activation="on-demand" 
                    application-distrib="false"> 
                <option>-Xms6144m</option>
                <option>-Xmx6144m</option>
                <option>-cp</option>
                <option>..\Sistema-de-Votaciones\server\build\libs\server.jar</option>
                <option>ServerMain</option>
                <option>--Ice.Config=..\Sistema-de-Votaciones\server\src\main\resources\config.server2.cfg</option>
                <property name="Ice.Config" value="..\Sistema-de-Votaciones\server\src\main\resources\config.server2.cfg"/>
                <adapter name="ServerAdapter" id="ServerAdapter2ID" replica-group="ServerServiceReplicas">
                    <object identity="ServerService2" type="::ElectionSystem::ServerService"/>
                </adapter>
            </server>

            <!-- Control Center -->
            <server id="ControlCenterServiceInstance1"
                    exe="java"
                    activation="on-demand">
                <option>-Xms6144m</option>
                <option>-Xmx6144m</option>
                <option>-cp</option>
                <option>..\Sistema-de-Votaciones\control_center\build\libs\control_center.jar</option>
                <option>ControlCenterMain</option>
                <property name="Ice.Config" value="..\Sistema-de-Votaciones\control_center\src\main\resources\config.control.cfg"/>
                <adapter name="ControlCenterAdapter" id="ControlCenterAdapterID">
                    <object identity="ControlCenterService" type="::ElectionSystem::ControlCenterService"/>
                </adapter>
            </server>
        </node>

        <!-- Configurar el balanceador de carga -->
        <replica-group id="ServerServiceReplicas">
            <load-balancing type="round-robin"/>
            <object identity="ServerServiceLoadBalancer" type="::ElectionSystem::ServerService"/>
        </replica-group>
    </application>
</icegrid>